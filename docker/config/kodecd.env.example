# KodeCD Application Environment Variables
# This file is mounted into the web and sidekiq containers

# Rails
RAILS_ENV=production
RAILS_SERVE_STATIC_FILES=true
RAILS_LOG_TO_STDOUT=true

# Database (automatically set by docker-compose)
# DATABASE_URL=postgresql://kodecd:password@postgres:5432/kodecd_production

# Redis (automatically set by docker-compose)
# REDIS_URL=redis://redis:6379/0

# Secret Key (automatically set by docker-compose)
# SECRET_KEY_BASE=your_secret_key_here

# External URL
# EXTERNAL_URL=http://localhost

# Email/SMTP
SMTP_ADDRESS=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=notifications@example.com
SMTP_PASSWORD=CHANGE_ME
SMTP_DOMAIN=example.com
SMTP_AUTHENTICATION=plain
SMTP_ENABLE_STARTTLS_AUTO=true
MAIL_FROM=kodecd@example.com

# Storage paths
GIT_DATA_DIR=/var/opt/kodecd/git-data
ARTIFACTS_DIR=/var/opt/kodecd/artifacts
CACHE_DIR=/var/opt/kodecd/cache

# Feature flags
FEATURES_TEAMS_ENABLED=true
FEATURES_EPICS_ENABLED=true
FEATURES_WIKI_ENABLED=true
FEATURES_SECURITY_SCANNING_ENABLED=true

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Session
SESSION_TIMEOUT=3600

# Logging
LOG_LEVEL=info
