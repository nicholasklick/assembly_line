# KodeCD Docker Configuration
# Copy this file to .env and customize

################################################################################
# REQUIRED SETTINGS
################################################################################

# External URL for your KodeCD instance
EXTERNAL_URL=http://localhost
EXTERNAL_HOST=localhost

# Secret key base (generate with: openssl rand -hex 64)
SECRET_KEY_BASE=CHANGE_ME_TO_RANDOM_STRING

# Runner token (generate with: openssl rand -hex 32)
RUNNER_TOKEN=CHANGE_ME_TO_SECURE_TOKEN

################################################################################
# DATABASE SETTINGS
################################################################################

POSTGRES_USER=kodecd
POSTGRES_PASSWORD=kodecd_password
POSTGRES_DB=kodecd_production

################################################################################
# REDIS SETTINGS
################################################################################

# Leave empty for no password
REDIS_PASSWORD=

################################################################################
# PORT SETTINGS
################################################################################

# Ports exposed on host
HTTP_PORT=80
HTTPS_PORT=443
WEB_PORT=3000

################################################################################
# RUNNER SETTINGS
################################################################################

RUNNER_NAME=docker-runner-1
RUNNER_CONCURRENT_JOBS=4

################################################################################
# MAIL SETTINGS
################################################################################

SMTP_ADDRESS=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=notifications@example.com
SMTP_PASSWORD=CHANGE_ME
SMTP_DOMAIN=example.com
SMTP_AUTHENTICATION=plain
SMTP_ENABLE_STARTTLS_AUTO=true
MAIL_FROM=kodecd@example.com

################################################################################
# OPTIONAL SETTINGS
################################################################################

# Rails environment
RAILS_ENV=production

# Time zone
TZ=UTC

# Log level (debug, info, warn, error)
LOG_LEVEL=info
